        <Button name="CPS_Skill" font="ZoFontGame" virtual="true">
            <Dimensions x="40" y="40"/>
            <OnMouseEnter>
                if self.slot == nil then return end

                local actionSlotIndex = self.slot
                local slotData = ACTION_BAR_ASSIGNMENT_MANAGER:GetCurrentHotbar():GetSlotData(actionSlotIndex)
                if slotData then
                    -- This is an ability, use the slotData tooltip
                    if self.activeTooltip then
                        ClearTooltip(self.activeTooltip)
                        self.activeTooltip = nil
                    end

                    local tooltip = slotData:GetKeyboardTooltipControl()
                    if tooltip then
                        self.activeTooltip = tooltip
                        InitializeTooltip(tooltip, self, BOTTOM, 0, -5, TOP)
                        slotData:SetKeyboardTooltip(tooltip)
                    end
                end
            </OnMouseEnter>

            <OnMouseExit>
                if self.activeTooltip then
                    ClearTooltip(self.activeTooltip)
                    self.activeTooltip = nil
                end
            </OnMouseExit>
        </Button>

